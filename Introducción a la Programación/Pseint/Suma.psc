//Definición del proceso o programa
Algoritmo Suma
	//Entradas
	Definir a, b, c, r Como Entero;
	//Instrucción al usuario
	Escribir "Digite un numero 1:";
	Leer a;
	//Instrucción al usuario
	Escribir "Digite un numero 2:";
	Leer b;
	//Instrucción al usuario
	Escribir "Digite un numero 3:";
	Leer c;
	//Proceso
	r = a + b + c;
	//Salida
	Escribir "El resultado es: ", r;
FinAlgoritmo
